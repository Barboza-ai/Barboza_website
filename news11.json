// --- CategoryTabs Component ---
function CategoryTabs({ setActiveSection, searchTerm, setSearchTerm }) {
  const categories = ["AI & Tech", "Robotics", "Machine Learning"];

  return (
    <div className="flex justify-center gap-3 md:gap-4 flex-wrap px-4 py-6">
      {categories.map((category) => (
        <button
          key={category}
          onClick={(e) => { e.preventDefault(); setActiveSection(category); setSearchTerm(''); }} // Clear search on category change
          className={`px-4 py-2 rounded-full text-sm font-medium shadow-md transition-colors duration-200 focus:outline-none focus:ring-2
            ${category === "AI & Tech"
              ? "bg-indigo-500 text-white hover:bg-indigo-600 focus:ring-indigo-400"
              : "bg-slate-700 text-slate-200 hover:bg-slate-600 focus:ring-slate-500"
            }`}
        >
          {category}
        </button>
      ))}
      <input
        type="text"
        placeholder="Search AI news..."
        value={searchTerm}
        onChange={(e) => setSearchTerm(e.target.value)}
        className="bg-slate-800 text-white px-4 py-2 rounded-full border border-slate-600 ml-0 mt-3 md:mt-0 md:ml-4 w-full md:w-auto focus:outline-none focus:border-indigo-400 focus:ring-1 focus:ring-indigo-400"
      />
    </div>
  );
}

// --- ArticleCard Component ---
function ArticleCard({ title, description, imageUrl, category, author, publishDate }) {
  return (
    <div className="bg-slate-800 rounded-lg shadow-lg overflow-hidden transform transition-transform duration-300 hover:scale-105 hover:shadow-xl">
      <img src={imageUrl} alt={title} className="w-full h-48 object-cover" onError={(e) => { e.target.onerror = null; e.target.src = "https://placehold.co/400x250/334155/E2E8F0?text=Image+Error"; }} />
      <div className="p-5">
        <span className="text-indigo-400 text-xs font-semibold uppercase">{category}</span>
        <h3 className="text-xl font-bold text-white mt-2 mb-2">{title}</h3>
        <p className="text-slate-300 text-sm mb-3">{description}</p>
        <div className="text-slate-500 text-xs flex justify-between items-center">
          <span>By {author}</span>
          <span>{publishDate}</span>
        </div>
        <button className="mt-4 text-indigo-400 hover:text-indigo-300 text-sm font-semibold flex items-center transition-colors duration-200">
          Read More
          <svg className="w-4 h-4 ml-1" fill="none" stroke="currentColor" viewBox="0 0 24 24" xmlns="http://www.w3.org/2000/svg"><path strokeLinecap="round" strokeLinejoin="round" strokeWidth="2" d="M9 5l7 7-7 7"></path></svg>
        </button>
      </div>
    </div>
  );
}

// --- SectionContent Component ---
function SectionContent({ activeSection, searchTerm }) {
  const lowerCaseSearchTerm = searchTerm.toLowerCase();
  const filteredArticles = allArticles.filter(article =>
    article.category === activeSection &&
    (article.title.toLowerCase().includes(lowerCaseSearchTerm) ||
     article.description.toLowerCase().includes(lowerCaseSearchTerm))
  );

  const getSectionTitle = (section) => {
    switch (section) {
      case "AI & Tech": return "ðŸ§  Latest AI & Tech News";
      case "Automotive": return "ðŸš— Automotive AI & Tech Insights";
      case "Gadget with AI": return "ðŸ“± Smart Gadgets & AI Innovations";
      case "Robotics": return "ðŸ¤– Robotics Breakthroughs";
      case "Machine Learning": return "ðŸ§  Machine Learning Deep Dives";
      case "Reviews": return "â­ Product Reviews & Analysis";
      case "News": return "ðŸ“° General AI & Tech News Updates";
      case "Gallery": return "ðŸ–¼ï¸ Visual Showcase: AI & Tech";
      case "Contact": return "ðŸ“§ Get in Touch with BarbozAI";
      default: return "Latest AI & Tech News";
    }
  };

  const getSectionIntro = (section) => {
    switch (section) {
      case "AI & Tech":
        return "This section brings you the cutting-edge developments in Artificial Intelligence and general technology. Explore articles on new AI models, ethical considerations, quantum computing, and smart city initiatives, providing a comprehensive overview of the field's rapid advancements.";
      case "Automotive":
        return "Dive into the future of transportation with our Automotive section. Here, you'll find articles on AI-powered autonomous driving, advancements in EV battery optimization, intelligent cockpit technologies, and the role of AI in revolutionizing automotive manufacturing and supply chains. Understand how AI is driving innovation on the road.";
      case "Gadget with AI":
        return "Explore the latest smart devices and consumer electronics enhanced with Artificial Intelligence. This section covers everything from next-gen smart home devices and wearable AI for health monitoring to AI-enhanced smartphone photography and smarter robotic vacuums. Discover how AI is making everyday gadgets more intelligent and intuitive.";
      case "Robotics":
        return "Uncover the latest breakthroughs in robotics. This section features articles on advanced robotics streamlining manufacturing, new robotic applications, and the integration of AI to create more intelligent and autonomous machines. Learn about the innovations shaping the world of automation and intelligent systems.";
      case "Machine Learning":
        return "Delve into the core of AI with our Machine Learning section. Here, we explore how ML algorithms are powering next-gen personalization, enabling predictive analytics, and driving advancements across various industries. Understand the concepts and applications that are at the forefront of intelligent system development.";
      case "Reviews":
        return "Get unbiased insights into the latest AI-powered products and technologies with our Reviews section. We provide in-depth analysis and comparisons of gadgets, software, and services, helping you make informed decisions about the tech that matters most. Discover what's worth your attention in the rapidly evolving AI landscape.";
      case "News":
        return "Stay up-to-date with the most recent happenings in the AI and tech world. This section covers breaking news, significant funding rounds for AI startups, policy updates, and major industry announcements. It's your go-to source for timely information on the global AI and technology ecosystem.";
      case "Gallery":
