// --- Main App Component ---
export default function App() {
  const [activeSection, setActiveSection] = useState("AI & Tech");
  const [searchTerm, setSearchTerm] = useState("");

  // Clear search term when active section changes
  useEffect(() => {
    setSearchTerm("");
  }, [activeSection]);

  return (
    <div className="bg-slate-900 min-h-screen text-white font-sans flex flex-col">
      {/* Tailwind CSS CDN */}
      <script src="https://cdn.tailwindcss.com"></script>

      <main className="flex-grow">
        <Navbar setActiveSection={setActiveSection} />
        <HeroSection activeSection={activeSection} />
        <CategoryTabs setActiveSection={setActiveSection} searchTerm={searchTerm} setSearchTerm={setSearchTerm} />
        <SectionContent activeSection={activeSection} searchTerm={searchTerm} />
      </main>

      <Footer />
    </div>
  );
}
