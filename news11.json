      default:
        return "Explore the dynamic world of Artificial Intelligence and technology. This section provides a comprehensive overview of the latest news, research, and applications shaping our future.";
    }
  };

  return (
    <section className="px-6 py-8">
      <h2 className="text-2xl font-semibold mb-4">
        {getSectionTitle(activeSection)}
